{
    "manifest_version": 3,
    "name": "Facebook Comment Email Extractor",
    "version": "1.0",
    "description": "Extracts emails from Facebook comments.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["https://*.facebook.com/*"],
    "action": {

    },
    "background": {
    },
    "content_scripts": [
      {
        "matches": ["https://*.facebook.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  